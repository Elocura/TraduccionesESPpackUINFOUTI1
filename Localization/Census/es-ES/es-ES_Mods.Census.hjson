Configs: {
	CensusConfigClient: {
		DisplayName: Census configuración del cliente

		ShowLocatingArrow: {
			Label: Mostrar flechas de localización de NPC
			Tooltip:
				'''
				Coloca el cursor sobre un NPC en el menú de [c/ddab1c:vivienda] para ver en qué dirección se encuentra.
				Útil para encontrar al NPC que has perdido de vista.
				'''
		}

		ArrowColor: {
			Label: Color de la flecha de localización
			Tooltip: ""
		}

		DisableConditionsText: {
			Label: Deshabilitar el texto de las condiciones de aparición
			Tooltip:
				'''
				Habilite esto para evitar que aparezcan las condiciones que se deben cumplir para que un NPC se mude contigo.
				Útil si solo quieres ver los NPC que podrían aparecer, pero no quieres que te arruinen
				la experiencia de descubrir cuáles son las condiciones que se deben cumplir,
				para que aparezcan los NPC de la lista y que todavía no se han mudado contigo.
				'''
		}

		Headers.DeveloperOptions: "[c/ff0000:Opciones de desarrollador]"

		DisableAutoLocalization: {
			Label: Desactivar la localización automática
			Tooltip:
				'''
				De forma predeterminada, el mod [c/ddab1c:Census - Town NPC Checklist] agregará [c/ddab1c:claves/keys] de localización para
				el texto de condición de aparición, de los NPC de la ciudad, contenidos en los mods que se están construyendo.
				Habilite esta opción para deshabilitar este comportamiento.
				'''
		}
	}
}

